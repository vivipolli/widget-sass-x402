{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/merchant",
      "destination": "/index.html"
    },
    {
      "source": "/saas-platform-demo.html",
      "destination": "/saas-platform-demo.html"
    },
    {
      "source": "/widget",
      "destination": "/widget/index.html"
    },
    {
      "source": "/widget/(.*)",
      "destination": "/widget/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
